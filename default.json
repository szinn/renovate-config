{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":automergeBranch",
    ":automergeDigest",
    ":dependencyDashboard",
    ":disableRateLimiting",
    ":enablePreCommit",
    ":semanticCommits",
    ":separatePatchReleases",
    "github>szinn/renovate-config:automerge-github-actions",
    "github>szinn/renovate-config:generic-regex-manager",
    "github>szinn/renovate-config:labels",
    "github>szinn/renovate-config:semantic-commits",
    "helpers:pinGitHubActionDigests"
  ],
  "timezone": "America/Toronto",
  "dependencyDashboardTitle": "Renovate Dashboard",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "commitBodyTable": true,
  "rebaseWhen": "conflicted",
  "platformCommit": true
}
